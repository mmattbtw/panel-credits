generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["dataProxy"]
  engineType      = "dataproxy"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Streamer {
  id                  String                @id
  login               String
  displayName         String
  profilePicture      String
  createdAt           DateTime              @default(now())
  updatedAt           DateTime              @updatedAt
  panels              Panel[]
  ChatterPanelCredits ChatterPanelCredits[]
}

model ChatterPanelCredits {
  id      String @id @default(cuid())
  credits Int    @default(0)

  chatterId String
  chatter   Chatter @relation(fields: [chatterId], references: [id])

  streamerId String
  streamer   Streamer @relation(fields: [streamerId], references: [id])
}

model Chatter {
  id             String                @id
  login          String
  displayName    String
  profilePicture String
  createdAt      DateTime              @default(now())
  updatedAt      DateTime              @updatedAt
  panelCredits   ChatterPanelCredits[]
  panels         Panel[]
}

enum PanelStatus {
  ACCEPTED
  REJECTED
  PENDING
}

model Panel {
  id         String  @id @default(cuid())
  chatterId  String
  streamerId String
  title      String
  markdown   String
  image      String?
  link       String?

  status PanelStatus @default(PENDING)

  chatter  Chatter  @relation(fields: [chatterId], references: [id])
  streamer Streamer @relation(fields: [streamerId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
